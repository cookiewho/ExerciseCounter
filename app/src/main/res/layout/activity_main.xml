<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text0"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:text="Welcome! Input the ammount of sets and reps you would like to do. If you would like to not be timed, just put a 0. "
        android:layout_marginHorizontal="10dp"/>

    <LinearLayout
        android:id="@+id/linLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Sets"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Repititions"
            android:layout_marginHorizontal="10dp"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Seconds/Rep"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputSet"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/inputRep"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/secondsperrep"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:inputType="number"/>
    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="20dp"
        android:text="Start"
        />
</LinearLayout>